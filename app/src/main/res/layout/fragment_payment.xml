<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/payment_toolbar"/>
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
   <TextView
       android:background="@drawable/grey_line"
       android:layout_width="0dp"
       android:layout_weight="3"
       android:layout_height="wrap_content"
       android:text="@string/teslimat_adresi"
       android:textColor="#800020"
       android:layout_margin="10dp"
       android:textSize="16sp"/>
        <TextView
            android:id="@+id/editAdr"
            android:textSize="12sp"
            android:textColor="#800020"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/ekle_duzenle"
            android:layout_margin="10dp"
            />
    </LinearLayout>
   <Spinner
       android:id="@+id/spinnerAdr"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/spinner_background"
       android:popupBackground="#fffced">

   </Spinner>
    <CheckBox
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fat_ayni_adres"
        android:textColor="#443d1f"/>

</LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/linFat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/grey_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fat_adres"
            android:textColor="#800020"
            android:layout_margin="10dp"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/spinnerFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:popupBackground="#fff">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/kart_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_line"
                android:text="@string/kart_bilgi"
                android:textColor="#800020"
                android:layout_margin="10dp"
                android:textSize="16sp"
                />


        </LinearLayout>
        <EditText
            android:id="@+id/kartholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_layout"
            android:hint="@string/kart_uzeri_isim"
            android:layout_margin="10dp"
            android:padding="10dp" />
        <EditText
            android:id="@+id/kartno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_layout"
            android:hint="@string/kart_no"
            android:layout_margin="10dp"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/son_kullanma"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <Spinner
               android:id="@+id/spmonth"
               android:layout_margin="10dp"
               android:padding="10dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="40dp"
               android:background="@drawable/spinner_background"
               android:entries="@array/days">

           </Spinner>
            <Spinner
                android:id="@+id/spyear"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:entries="@array/years">

            </Spinner>
            <EditText
                android:id="@+id/cvv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/edittext_layout"
                android:hint="CVV"

                android:inputType="number"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/kayit_kart_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kayitli_kart_sec"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#800020"
        />
    <LinearLayout
        android:visibility="invisible"
       android:id="@+id/kartbilgi"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/kart_spin"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:background="@drawable/grey_line"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/kart_bilgi"
            android:textColor="#800020"
            android:layout_margin="10dp"
            android:textSize="16sp"/>


        </LinearLayout>
        <Spinner
            android:id="@+id/spinnerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background">

        </Spinner>
        <TextView
            android:visibility="gone"
            android:id="@+id/kart_gir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kart_gir"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#800020"
            />

    </LinearLayout>
    <CheckBox
        android:id="@+id/checkbox2"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ön Bilgilendirme Koşulları'nı ve Mesafeli Satış Sözleşmesi'ni okudum,onaylıyorum."/>
<TextView
    android:id="@+id/show"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/button_buy"
    android:text="@string/devam"
    android:textColor="#fff"
    android:layout_margin="10dp"
    android:padding="10dp"/>
</LinearLayout>
</ScrollView>