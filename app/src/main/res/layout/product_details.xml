    <TextView
        android:padding="10dp"
        android:id="@+id/aciklama_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Açıklama"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <TextView
        android:textColor="#000"
        android:id="@+id/aciklama_urun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jfjhjhjdfhgsjghjghsjgnfjgbjfbsjbjdbdjdgbjgbjgbggbjfbjbfjbfjbdjbdjjfbdjbfvjbvjdbfjbjdjbdfjbjfdbjbjbjbjfdbjdbjb"
        android:padding="10dp"/>

</LinearLayout>
    </ScrollView>
</LinearLayout>
