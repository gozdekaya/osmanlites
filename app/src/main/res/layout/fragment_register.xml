<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:textColor="#800020"
        android:layout_margin="30sp"
        android:textSize="30sp"/>
    <LinearLayout
        android:padding="20dp"
        android:id="@+id/lin1"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:hint="Ad "
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/person"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_uname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:hint="Soyad"
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/person"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_usurname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:hint="E-Posta"
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/mail"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:hint="Şifre"
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/pass"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:hint="Telefon Numarası"
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_phone"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:hint="TC Kimlik Numarası"
            android:textColorHint="#800020"
            android:textColor="#800020"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_identity"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_layout"
            android:id="@+id/et_tc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/lin1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_buy"
        android:text="Kayıt Ol"
        android:textColor="#fff" />
</RelativeLayout>