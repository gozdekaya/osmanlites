<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_margin="5dp"
    android:background="@drawable/grey_border"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin1"
        android:background="@drawable/grey_line"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView

    android:layout_weight="2"
    android:id="@+id/tv_tarih"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SipariÅŸ Tarihi"
    android:layout_margin="5dp"/>
    <TextView

        android:id="@+id/tv_tutar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toplam: 100Tl"
        android:layout_margin="5dp"
        android:layout_weight="2"/>
        <TextView
            android:id="@+id/display_detay"
            android:gravity="center_horizontal"
            android:textColor="#000"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:text="@string/detay"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1">
        <TextView
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="#0bc15c"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_check_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teslim Edildi"/>
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_products"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>


    </LinearLayout>
</RelativeLayout>